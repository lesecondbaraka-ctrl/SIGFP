# Fichier _headers pour la configuration des en-têtes HTTP

# Page d'accueil - pas de cache
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

# Assets statiques - cache long
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Fichiers de build - cache long
/build/*
  Cache-Control: public, max-age=31536000, immutable

# Fichiers de polices
/*.woff2
/*.woff
/*.ttf
  Cache-Control: public, max-age=31536000, immutable

# Fichiers JS et CSS - cache long avec versionnage
/*.js
/*.css
  Cache-Control: public, max-age=31536000, immutable

# Fichiers statiques - cache modéré
/*.jpg
/*.jpeg
/*.png
/*.svg
/*.gif
/*.ico
  Cache-Control: public, max-age=604800

# Redirection SPA - pour toutes les autres requêtes
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:;
